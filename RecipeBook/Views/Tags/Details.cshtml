@{
  Layout = "_Layout";
}

<h1>Details</h1>

@model RecipeBook.Models.Tag;

<h2>Tag Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.Recipes.Count == 0)
{
  <p>This item does not belong to any recipes</p>
}
else
{
  <h4>Recipe the tag belongs to:</h4>
  <ul>
  @foreach(var join in Model.Recipes)
  {
    <li>@Html.ActionLink($"{join.Recipe.Name}", "Details", "Recipes", new {id = join.Recipe.RecipeId})</li>
    @using (Html.BeginForm("DeleteRecipes", "Tags"))
    {
      @Html.Hidden("joinId", @join.RecipeTagId)
      <input type="submit" value="Delete"/>
    }
  }
  </ul>
}

<p>@Html.ActionLink("Back to tags", "Index")</p>
<p>@Html.ActionLink("Edit tag", "Edit", new { id = Model.TagId })</p>
<p>@Html.ActionLink("Delete tag", "Delete", new { id = Model.TagId })</p>
<p>@Html.ActionLink("Add a Tag", "Create")</p> 